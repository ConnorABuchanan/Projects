<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheNiceList.Console"
             Title="Console"
             BackgroundColor="#111710"
             >
    <VerticalStackLayout
        HorizontalOptions="Center"
        >

        <Editor
            x:Name="commandOut"
            IsReadOnly="True"
            BackgroundColor="#111710"
            TextColor="#a5c997"
            HeightRequest="500"
            WidthRequest="500"
            />

        <Entry
            x:Name="commandIn"
            Completed="CommandSent"
            BackgroundColor="#111710"
            TextColor="#a5c997"
            WidthRequest="500"
            />
    </VerticalStackLayout>
</ContentPage>